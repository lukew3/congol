div#gamePage.page
  div#gameContainer
    div#gameBoard
    div#underBoard
      div#underBoardUpper
        div#p1PiecesAvail.piecesAvail
        div#roundGroup
          p Round:
          p#roundCounter 0
        div#p2PiecesAvail.piecesAvail
      div#underBoardLower
        div.playerGroup
          p#p1Username.playerUsername Player 1
          p#p1Score.playerScore 0
          p#p1Timer.playerTimer 0:00
